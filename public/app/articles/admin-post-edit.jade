section.post.article_section
	ol.breadcrumb
		li
			a(href="/articles") Articles
		li
			a(href="/admin/articles/list") Administration
		li.active Edit Article
	form(name="EditPostForm")
		div.form-group
			label(for="inputTitle") Title
			input(type="text" class="form-control" id="inputTitle" placeholder="Title" value="{{post.title}}" ng-model="post.title")
		div.form-group
			label(for="textareaContent") Content
			textarea(class="form-control" rows="19" id="textareaContent" ng-model="post.content")
		div.form-group
			label(for="inputTags") Tags
			input(type="text" class="form-control" id="inputTags" placeholder="Tags #1, TagsÂ #2, ..." value="{{post.tags}}" ng-model="post.tags")
		button(type="submit" class="btn btn-success" ng-click="save(post, false)") Save	